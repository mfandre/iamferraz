<main class="container left-container">
    <div class="row">

        <div class="main-content" ng-controller="AdminPostController as postCtrl">
            <!-- Nav tabs -->
            <div class="sub-nav" role="tablist">
                <a href="#list-page-posts" show-tab role="tab" data-toggle="tab">Posts</a>
                <a href="#create-page-posts" show-tab role="tab" data-toggle="tab">Novo</a>
            </div>

            <!-- Tab panes -->
            <div class="tab-content">
                <div ng-init="getPosts()" role="tabpanel" class="animated fadeIn tab-pane active" id="list-page-posts">
                    <div class="row">
                        <h3>Posts</h3>
                        <div class="bs-example">
                            <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Título</th>
                                    <th>Autor</th>
                                    <th>Data criação</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="post in posts">
                                    <td>{{post._id}}</td>
                                    <td>{{post.title}}</td>
                                    <td>{{post.author}}</td>
                                    <td>{{post.created_date | date:'dd-MM-yyyy HH:mm:ss'}}</td>
                                    <td><button type="button" class="btn btn-primary">Editar</button><i class="link-spacer"></i><button ng-click="deletePost(post._id)" type="button" class="btn btn-danger">Deletar</button></td>
                                </tr>
                            </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div role="tabpanel" class="animated fadeIn tab-pane" id="create-page-posts">
                    <h3>New Post</h3>

                    <form>
                        <div class="form-group">
                            <label for="author">Author</label>
                            <input ng-model="post.author" type="text" placeholder="Author" class="form-control" name="author">
                        </div>

                        <div class="form-group">
                            <label for="title">Title</label>
                            <input ng-model="post.title" type="text" placeholder="Title" class="form-control" name="title">
                        </div>

                        <div class="form-group">
                            <label for="text">Text</label>
                            <textarea ng-model="post.text" class="form-control" name="text" placeholder="Text"></textarea>
                        </div>

                        <div class="form-group">
                            <input ng-click="createPost(post)" class="btn btn-default"  type="submit" value="Send">
                        </div>
                    </form>
                </div>
            </div>
        </div><!-- main content -->

    </div> <!--/row -->

</main> <!-- /container -->

