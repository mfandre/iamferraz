<% include ../header_admin %>

        <main class="container left-container">
            <div class="row">

                <div class="col-md-7 col-sm-12 col-md-offset-4 main-content" ng-controller="LoginController as loginCtrl">

                    <h3>Admin</h3>

                    <form>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input ng-model="user.email" type="text" placeholder="Email" class="form-control" name="email">
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input ng-model="user.password" type="password" placeholder="Password" class="form-control" name="password">
                        </div>

                        <div class="form-group">
                            <input ng-click="login(user)" class="btn btn-default"  type="submit" value="Login">
                        </div>
                    </form>

                    <footer class="split-footer">
                        <i class="link-spacer"></i>
                        <span>IamFerraz</span>
                    </footer>
                </div><!-- main content -->
            </div> <!--/row -->

        </main> <!-- /container -->

<% include ../footer %>
