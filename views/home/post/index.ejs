<div class="col-md-7 col-sm-12 col-md-offset-5 main-content animated fadeIn " ng-controller="PostController as postCtrl">   

	<h1>{{post.title}}</h1>

	<p class="subtitle">{{post.subtitle}}</p>

	<div ng-bind-html="convertHtml(post.text)"></div>

	<p class="meta">
		<img ng-src="{{post.author.avatar}}" class="user-icon" alt="user-image">By <a class="" href="category.html">{{post.author.name}}</a> in <span ng-repeat="category in post.category"><a href="#{{category._id}}">{{category.name}}</a> <i class="link-spacer"></i></span> <i class="fa fa-bookmark"></i> {{post.created_date | date:'dd-MM-yyyy HH:mm:ss'}}
	</p>

	<a href="" ng-click="goBack()" class="cd-botttomRight"><i class="fa fa-chevron-left fa-2"></i></a>

	<div>
		<div>
			<div ng-repeat="comment in post.comments">
				<pre>
					{{comment.name}}
					{{comment.email}}
					{{comment.comment}}
				</pre>
			</div>
		</div>

		<form>
			<div class="form-group">
				<label for="name">Nome</label>
				<input ng-model="comment.name" type="text" placeholder="Nome" class="form-control" name="name">
			</div>

			<div class="form-group">
				<label for="name">Email</label>
				<input ng-model="comment.email" type="text" placeholder="Email" class="form-control" name="email">
			</div>

			<div class="form-group">
				<label for="comment">Comentário</label>
				<input ng-model="comment.comment" type="text" placeholder="Comentário" class="form-control" name="comment">
			</div>

			<div class="form-group">
				<button ng-click="sendComment(comment)" type="button" class="btn btn-default" value="Send">Enviar</button>
			</div>
		</form>
	</div>
</div><!-- main-content/col -->