<div class="col-md-7 col-sm-12 col-md-offset-5 main-content animated fadeIn " ng-controller="EmailController as emailCtrl">
	<h3>Contact</h3>

	<form name="emailForm" ng-submit="emailForm.$valid && sendEmail()" novalidate>
	<form>
		<div class="form-group" >
			<label for="name">Name</label>
			<input ng-model="email.name" type="text" placeholder="Name" class="form-control" name="name">
		</div>

		<div class="form-group">
			<label for="email">Email</label>
			<input ng-model="comment.email" type="text" placeholder="example@email.com" class="form-control" name="email">
		</div>

		<div class="form-group">
			<label for="message">Message</label>
			<textarea ng-model="comment.msg" class="form-control" name="message" placeholder="Hi, you're awesome!!!"></textarea>
		</div>

		<div class="form-group">
			<div vc-recaptcha 
				key="'6LeGNQcTAAAAAOh63N_Q8rMmCi4T-OL3aXCsW_0z'" 
				theme="light"
				on-success="setResponse(response)">
			</div>
		</div>

		<div class="form-group">
			<input class="btn btn-default" type="submit" value="Send">
		</div>
	</form>
</div>